<Configuration status="WARN"  packages="org.graylog2.log4j2">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %X{X-Request-Id} %-5level %logger{36} - %msg%n"/>
        </Console>
        <GELF name="gelfAppender" protocol="udp" server="mgmt-graylog.cessda-mgmt.svc.cluster.local" port="12201" hostName="localhost">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %X{RequestId} %-5level %logger{36} - %msg%n"/>             
        </GELF>
    </Appenders>
    <Loggers>
        <Logger name="eu.cessda.cafe" level="trace" additivity="false">
            <AppenderRef ref="gelfAppender"/>
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="warn">
            <AppenderRef ref="gelfAppender"/>
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>